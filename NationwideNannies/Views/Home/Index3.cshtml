<link href="~/Content/slidy.css" rel="stylesheet">




<style type="text/css">
    #container {
        max-width: 1135px;
        margin: auto;
    }


    .hidden {
        display: none;
        visibility: hidden;
    }

    .visuallyhidden {
        border: 0;
        clip: rect(0 0 0 0);
        height: 1px;
        margin: -1px;
        overflow: hidden;
        padding: 0;
        position: absolute;
        width: 1px;
    }

        .visuallyhidden.focusable:active,
        .visuallyhidden.focusable:focus {
            clip: auto;
            height: auto;
            margin: 0;
            overflow: visible;
            position: static;
            width: auto;
        }

    .invisible {
        visibility: hidden;
    }

    .clearfix:before, .clearfix:after {
        content: "";
        display: table;
    }

    .clearfix:after {
        clear: both;
    }

    .clearfix {
        zoom: 1;
    }

    .rotator-images {
        max-width: 800px;
        float: left;
        margin-right: 5px;
        margin-bottom: 10px;
    }

    .social-media-posts {
    }

    .fb_iframe_widget {
        margin-bottom: 10px;
    }

    .twitter-timeline {
        display: block;
        float: left;
        margin-right: 5px;
    }

    .slidyContainer {
        margin: 0;
    }
</style>

