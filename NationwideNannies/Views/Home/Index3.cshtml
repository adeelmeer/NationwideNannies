@{
    ViewBag.Title = "Home";
    ViewBag.MetaKeywords = "";
    ViewBag.MetaDescription = "";

}

<link href="~/Content/slidy.css" rel="stylesheet">




<style type="text/css">
    #container
    {
        max-width: 800px;
        margin: 2em auto;
    }


    .hidden
    {
        display: none;
        visibility: hidden;
    }

    .visuallyhidden
    {
        border: 0;
        clip: rect(0 0 0 0);
        height: 1px;
        margin: -1px;
        overflow: hidden;
        padding: 0;
        position: absolute;
        width: 1px;
    }

        .visuallyhidden.focusable:active,
        .visuallyhidden.focusable:focus
        {
            clip: auto;
            height: auto;
            margin: 0;
            overflow: visible;
            position: static;
            width: auto;
        }

    .invisible
    {
        visibility: hidden;
    }

    .clearfix:before, .clearfix:after
    {
        content: "";
        display: table;
    }

    .clearfix:after
    {
        clear: both;
    }

    .clearfix
    {
        zoom: 1;
    }

    .slide-caption h3
    {
        color: #fff;
        font-size: 1.7em;
        text-transform: capitalize;
        font-family: 'Crimson Text', 'serif';
        margin-top: 5px;
    }

    .slide-caption p
    {
        font-size: 1.3em;
        color: #fff;
        font-family: 'Crimson Text', 'serif';
        padding-bottom: 1em;
        /*line-height: 1.8em;
        padding: 1em 0 2em;*/
    }
</style>

<div id="container">


    <div id="main" role="main">



        <div id="slidyBanner" class="slidyContainer" title="">
            <div class="slidySlides">

                <!-- Each slide is wrapped in figure section -->

                <!-- Slide 1 -->
                <!-- add the 'slidyCurrent' class to which slide you want as default -->
                <figure class="slidyCurrent">
                    <!-- Your context goes here -->

                    <div class="slide-caption">
                        <h3>UK’s leading childcare experts</h3>
                        <p>
                            “After years of childcare experience, we know the qualities that make the perfect nanny.  We believe that each child and family is unique, so we take the time to find the best possible match for you.”
                           &nbsp; &nbsp; <a href="/clients/EmployThroughUs" class="know-more">know more</a>
                        </p>
                    </div>

                    <img alt="Uyuni, Bolivia" src="/images/bnr1.jpg">
                    <!-- Use the figcaption element to add captions -->



                </figure>

                <!-- Slide 2 -->
                <figure>

                    <div class="slide-caption">
                        <h3>Get your perfect fit</h3>
                        <p>
                            “Whether you require a bilingual nanny, a maternity nurse, help with the housekeeping/mothers helper, live in or live out nanny, on a temporary or permanent basis we are sure that we have the right person to fit your specifications.”
                            &nbsp; &nbsp;  <a href="/services/Nannies" class="know-more">know more</a>
                        </p>

                    </div>
                    <img alt="Shanghai, China" src="/images/bnr2.jpg">
                </figure>

                <!-- Slide 3 -->
                <figure>

                    <div class="slide-caption">
                        <h3>Hassle free recruitment</h3>
                        <p>
                            “We strive to make what can be a difficult process into a smooth and stress-free transition, helping you every step of the way, from offer letters to devising contracts and payroll.”
                            &nbsp; &nbsp;  <a href="/clients/StartYourNannySearch" class="know-more">know more</a>
                        </p>
                    </div>
                    <img alt="Shanghai, China" src="/images/bnr3.jpg">
                </figure>

                <!-- Slide 4 -->
                <figure>

                    <div class="slide-caption">
                        <h3>Dependable</h3>
                        <p>
                            “Nationwide Nannies offers a wide variety of emergency childcare services ranging from day time to evening and weekend babysitting. Our staff go through a stringent vetting process with a ‘must have’ clear DBS. We are here for you 365 days of the year, so just sit back and relax”
                            &nbsp; &nbsp; <a href="/services/BabySitters" class="know-more">know more</a>
                        </p>

                    </div>
                    <img alt="Shanghai, China" src="/images/bnr4.jpg">
                </figure>





            </div>
        </div>


    </div>
</div>


<script src="~/Scripts/slidy.js"></script>

<script>
    $('.slidyContainer').slidy({
        useKeybord: true, // use keys defined below to expand / collapse sections
        auto: false,       // Start slideshow automatically
        interval: 5000,     // Time between each slide
        initialInterval: 100  // Initial interval when page loads
    });



	</script>
