@{
    ViewBag.Title = "Info Message";
}

<div class="contactus-bg">
    <div class="image-blur-div">

        <div class="content">
            <div class="about-section">
                <div class="container">
                    @if (ViewBag.InfoHeading != null)
                    {
                        <h2>@ViewBag.InfoHeading</h2>
                    }

                    @if (ViewBag.InfoMessage != null)
                    {
                        <div class="about-info">
                            <p>@ViewBag.InfoMessage</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
